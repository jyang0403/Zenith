<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Zenith" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/earth</item>
        <item name="android:windowBackground">@color/screen_background</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="titleTextColor">@color/black</item>
        <item name="actionBarStyle">@style/MyActionBarTitleText</item>
        <item name="actionBarTheme">@color/black</item>
        <item name="actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>


    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
        parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="background">@color/screen_background</item>
    </style>

    <!-- ActionBar tabs text -->
    <style name="MyActionBarTabText"
        parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Theme.Zenith.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Zenith.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Zenith.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>